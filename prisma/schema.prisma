// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Example {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SessionCart {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
  orders    Orders[]
}

model Address {
  id       String  @id @default(uuid())
  profile  Profile @default(HOME)
  address  String
  landmark String?
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  address       Address[]
  accounts      Account[]
  sessions      Session[]
  password      String?   @db.Text
  role          Role?     @default(USER)
  cart          Cart?
  orders        Orders[]
}

model Options {
  id        String   @id @default(uuid())
  text      String?
  price     Int      @default(0)
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String?
  items     Items?   @relation(fields: [itemsId], references: [id], onDelete: Cascade)
  itemsId   String?
}

model Size {
  id        String   @id @default(uuid())
  size      String
  price     Int      @default(0)
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String?
}

model Product {
  id           String    @id @default(uuid())
  title        String
  descripton   String
  image        String?
  extraOptions Options[]
  item         Items[]
  size         Size[]
}

model Items {
  id           String    @id @default(uuid())
  product      Product?  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId    String?
  cart         Cart?     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  cartId       String?
  qty          Int       @default(0)
  totalPrice   Int       @default(0)
  size         String?
  extraOptions Options[]
  order        Orders?   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId      String?
}

model Cart {
  id         String    @id @default(uuid())
  total      Int?
  createdAt  DateTime? @default(now())
  item       Items[]
  qty        Int?      @default(0)
  totalPrice Int       @default(0)
  sessionId  String?   @unique
  user       User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String?   @unique
}

model Orders {
  id         String       @id @default(uuid())
  customer   String
  address    String
  total      Int
  status     Int          @default(0)
  order_id   String
  payment_id String
  method     Int?
  user       User?        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String?
  session    SessionCart? @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId  String?
  items      Items[]
}

enum Role {
  ADMIN
  USER
  DELIVERY
}

enum size {
  REGULAR
  MEDIUM
  LARGE
}

enum Profile {
  HOME
  WORK
  HOTEL
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
